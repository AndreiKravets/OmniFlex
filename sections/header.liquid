{{ 'header.css' | asset_url | stylesheet_tag }}

<style>
  #shopify-section-{{ section.id }} .main-header {
    padding: {{ section.settings.header_padding }}px 0;
  }
</style>

<div class="main-header {% if section.settings.enable_sticky %} sticky-header {% endif %} {{ section.settings.header_layout }} {{ section.settings.shadow }} {{ section.settings.bg-color }}">
    <div class="container">
        <div class="d-flex justify-content-between align-items-center">
          <div class="w-50">
            {% if section.settings.header_layout == 'header-3' or section.settings.header_layout == 'header-4' %}
                <a class="header__search-toggle">
                  {% render 'icon' with 'search' %}
                </a>
            {% endif %}
            {% if section.settings.header_layout == 'header-1' %}
            <div class="header__logo">
                    <a href="/" class="header__logo-link">
                      {% if section.settings.logo != blank %}
                        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}"
                             style="max-width: {{ section.settings.logo_max_width }}px;">
                      {% else %}
                        {{ shop.name }}
                      {% endif %}
                    </a>
                  </div>
            {% endif %}
            {% if section.settings.header_layout == 'header-2' %}
             <nav class="header__menu {{ section.settings.text_transform }}">
                  {% include 'main-menu', menu: section.settings.menu %}
                  {% include 'main-menu', menu: section.settings.secondary_menu %}
             </nav>
            {% endif %}
          </div>

          <div class="w-100 d-flex justify-content-center">
            {% unless section.settings.header_layout == 'header-4' or section.settings.header_layout == 'header-2' %}
                <nav class="header__menu {{ section.settings.text_transform }}">
                  {% include 'main-menu', menu: section.settings.menu %}
                {% if section.settings.header_layout == 'header-3' %}
                  <div class="header__logo">
                    <a href="/" class="header__logo-link">
                      {% if section.settings.logo != blank %}
                        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}"
                             style="max-width: {{ section.settings.logo_max_width }}px;">
                      {% else %}
                        {{ shop.name }}
                      {% endif %}
                    </a>
                  </div>
                {% endif %}
                  {% include 'main-menu', menu: section.settings.secondary_menu %}
                </nav>
            {% endunless %}
            {% if section.settings.header_layout == 'header-4' or section.settings.header_layout == 'header-2'%}
            <div class="header__logo">
              <a href="/" class="header__logo-link">
                {% if section.settings.logo != blank %}
                  <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}"
                       style="max-width: {{ section.settings.logo_max_width }}px;">
                {% else %}
                  {{ shop.name }}
                {% endif %}
              </a>
            </div>
            {% endif %}
          </div>

          <div class="w-50 d-flex justify-content-end">
            {% if section.settings.header_layout == 'header-1' or section.settings.header_layout == 'header-2' %}
              <a class="header__search-toggle" aria-label="Toggle search">
                {% render 'icon' with 'search' %}
              </a>
            {% endif %}
            <a href="/account" class="header__account-link">
              {% render 'icon' with 'account' %}
            </a>
            <a href="/cart" class="header__cart-link">
              {% render 'icon' with 'cart' %}
            </a>
          </div>
    </div>

      {% if section.settings.header_layout == 'header-4' %}

        <div class="d-flex justify-content-center mt-7">
          <nav class="header__menu {{ section.settings.text_transform }}">
            {% include 'main-menu', menu: section.settings.menu %}
            {% include 'main-menu', menu: section.settings.secondary_menu %}
          </nav>
        </div>
      {% endif %}
</div>


{% schema %}
    {
    "name": "Header",
    "class": "shopify-section--header",
    "tag": "div",
    "settings": [
    {
    "type": "header",
    "content": "General settings"
    },
    {
    "type": "checkbox",
    "id": "enable_sticky",
    "label": "Enable sticky header",
    "default": true
    },
    {
    "type": "select",
    "id": "header_layout",
    "label": "Header layout",
    "options": [
    {
    "value": "header-1",
    "label": "Header 1"
    },
    {
    "value": "header-2",
    "label": "Header 2"
    },
    {
    "value": "header-3",
    "label": "Header 3"
    },
    {
    "value": "header-4",
    "label": "Header 4"
    }
    ]
    },
    {
    "type": "range",
    "id": "header_padding",
    "min": 5,
    "max": 40,
    "step": 1,
    "unit": "px",
    "label": "Header padding",
    "default": 20
    },
    {
    "type": "select",
    "id": "shadow",
    "label": "Shadow",
    "options": [
    {
    "value": "shadow-none",
    "label": "None"
    },
    {
    "value": "shadow-sm",
    "label": "Small"
    },
    {
    "value": "shadow",
    "label": "Medium"
    },
    {
    "value": "shadow-lg",
    "label": "Large"
    }
    ]
    },
    {
    "type": "checkbox",
    "id": "enable_search",
    "label": "Enable search",
    "default": true
    },
    {
    "type": "select",
    "id": "bg-color",
    "label": "Background color",
    "options": [
    {
    "value": "bg-body",
    "label": "Body"
    },
    {
    "value": "bg-primary text-primary",
    "label": "Primary"
    },
    {
    "value": "bg-secondary text-secondary",
    "label": "Secondary"
    },
    {
    "value": "bg-tertiary text-tertiary",
    "label": "Tertiary"
    }
    ]
    },
    {
    "type": "header",
    "content": "Logo"
    },
    {
    "type": "image_picker",
    "id": "logo",
    "label": "Image",
    "info": "280 x 80px .png recommended"
    },
    {
    "type": "range",
    "id": "logo_max_width",
    "min": 40,
    "max": 300,
    "step": 5,
    "unit": "px",
    "label": "Image width",
    "default": 140
    },
    {
    "type": "range",
    "id": "logo_mobile_max_width",
    "min": 25,
    "max": 170,
    "step": 5,
    "unit": "px",
    "label": "Mobile image width",
    "default": 100
    },
    {
    "type": "header",
    "content": "Navigation"
    },
    {
    "type": "link_list",
    "id": "menu",
    "label": "Menu",
    "default": "main-menu"
    },
    {
    "type": "link_list",
    "id": "secondary_menu",
    "label": "Secondary menu"
    },
    {
    "type": "select",
    "id": "text_transform",
    "label": "Text Transform",
    "options": [
    {
    "value": "text-capitalize",
    "label": "Capitalize"
    },
    {
    "value": "text-uppercase",
    "label": "Uppercase"
    },
    {
    "value": "text-lowercase",
    "label": "Lowercase"
    },
    {
    "value": "text-initial",
    "label": "Initial"
    }
    ],
    "default": "text-uppercase"
    }
    ],
    "blocks": [
    {
    "type": "mega_menu",
    "name": "Mega menu",
    "settings": [
    {
    "type": "text",
    "id": "menu_item",
    "label": "Menu item",
    "info": "Enter menu item to apply a mega menu dropdown."
    },
    {
    "type": "header",
    "content": "Featured product"
    },
    {
    "type": "product",
    "id": "product",
    "label": "Product"
    }
    ]
    }
    ]
    }
{% endschema %}