<div class="header {% if section.settings.enable_sticky %} sticky-header {% endif %} {{ section.settings.header_layout }} {{ section.settings.shadow }} {{ section.settings.bg-color }}">
    <div class="container">
        <div class="row justify-content-between">
          {% if section.settings.header_layout == 'header-3' or section.settings.header_layout == 'header-4' %}
            <a class="header__search-toggle" aria-label="Toggle search">
              {% render 'icon' with 'search' %}
            </a>
          {% endif %}
          {% unless section.settings.header_layout == 'header-4' %}
            <div class="d-flex">
                <nav class="header__menu">
                    {% include 'main-menu', menu: section.settings.menu %}
                </nav>
              {% if section.settings.header_layout == 'header-3' %}
                <div class="header__logo">
                  <a href="/" class="header__logo-link">
                    {% if section.settings.logo != blank %}
                      <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}"
                           style="max-width: {{ section.settings.logo_max_width }}px;">
                    {% else %}
                      {{ shop.name }}
                    {% endif %}
                  </a>
                </div>
              {% endif %}
                <nav class="header__menu">
                    {% include 'main-menu', menu: section.settings.secondary_menu %}
                </nav>
            </div>
            {% endunless %}
          {% unless section.settings.header_layout == 'header-3' %}
            <div class="header__logo {% if section.settings.header_layout == 'header-1' %} order-first {% endif %}">
                <a href="/" class="header__logo-link">
                    {% if section.settings.logo != blank %}
                        <img src="{{ section.settings.logo | img_url: 'master' }}" alt="{{ shop.name }}"
                             style="max-width: {{ section.settings.logo_max_width }}px;">
                    {% else %}
                        {{ shop.name }}
                    {% endif %}
                </a>
            </div>
            {% endunless %}
            <div class="header__account order-last">
              {% if section.settings.header_layout == 'header-1' or section.settings.header_layout == 'header-2' %}
                <a class="header__search-toggle" aria-label="Toggle search">
                    {% render 'icon' with 'search' %}
                </a>
              {% endif %}
                <a href="/account" class="header__account-link">
                    {% render 'icon' with 'account' %}
                </a>
                <a href="/cart" class="header__cart-link">
                    {% render 'icon' with 'cart' %}
                </a>
            </div>
        </div>
       {% if section.settings.header_layout == 'header-4' %}

      <div class="row justify-content-center">
        <nav class="header__menu">
          {% include 'main-menu', menu: section.settings.menu %}
        </nav>
        <nav class="header__menu">
          {% include 'main-menu', menu: section.settings.secondary_menu %}
        </nav>
      </div>
      {% endif %}
    </div>
</div>


{% schema %}
{
  "name": "Header",
  "class": "shopify-section--header",
  "tag": "header",
  "settings": [
    {
      "type": "header",
      "content": "General settings"
    },
    {
      "type": "checkbox",
      "id": "enable_sticky",
      "label": "Enable sticky header",
      "default": true
    },
    {
      "type": "select",
      "id": "header_layout",
      "label": "Header layout",
      "options": [
        {
          "value": "header-1",
          "label": "Header 1"
        },
        {
          "value": "header-2",
          "label": "Header 2"
        },
        {
          "value": "header-3",
          "label": "Header 3"
        },
        {
          "value": "header-4",
          "label": "Header 4"
        }
      ]
    },
    {
      "type": "select",
      "id": "shadow",
      "label": "Shadow",
      "options": [
        {
          "value": "shadow-none",
          "label": "None"
        },
        {
          "value": "shadow-sm",
          "label": "Small"
        },
        {
          "value": "shadow",
          "label": "Medium"
        },
        {
          "value": "shadow-lg",
          "label": "Large"
        }
      ]
    },
    {
      "type": "checkbox",
      "id": "enable_search",
      "label": "Enable search",
      "default": true
    },
    {
      "type": "select",
      "id": "bg-color",
      "label": "Background color",
      "options": [
        {
          "value": "bg-body",
          "label": "Body"
        },
        {
          "value": "bg-primary text-primary",
          "label": "Primary"
        },
        {
          "value": "bg-secondary text-secondary",
          "label": "Secondary"
        },
        {
          "value": "bg-tertiary text-tertiary",
          "label": "Tertiary"
        }
      ]
    },
    {
      "type": "header",
      "content": "Logo"
    },
    {
      "type": "image_picker",
      "id": "logo",
      "label": "Image",
      "info": "280 x 80px .png recommended"
    },
    {
      "type": "range",
      "id": "logo_max_width",
      "min": 40,
      "max": 300,
      "step": 5,
      "unit": "px",
      "label": "Image width",
      "default": 140
    },
    {
      "type": "range",
      "id": "logo_mobile_max_width",
      "min": 25,
      "max": 170,
      "step": 5,
      "unit": "px",
      "label": "Mobile image width",
      "default": 100
    },
    {
      "type": "header",
      "content": "Navigation"
    },
    {
      "type": "link_list",
      "id": "menu",
      "label": "Menu",
      "default": "main-menu"
    },
    {
      "type": "link_list",
      "id": "secondary_menu",
      "label": "Secondary menu"
    }
  ],
  "blocks": [
    {
      "type": "mega_menu",
      "name": "Mega menu",
      "settings": [
        {
          "type": "text",
          "id": "menu_item",
          "label": "Menu item",
          "info": "Enter menu item to apply a mega menu dropdown."
        },
        {
          "type": "header",
          "content": "Featured product"
        },
        {
          "type": "product",
          "id": "product",
          "label": "Product"
        }
      ]
    }
  ]
}
{% endschema %}