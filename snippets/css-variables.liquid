        --font-body: {{ settings.font_body.family }};

        --font-size-body: {{ settings.font_size_body }}px;
        --font-size-h1: {{ settings.font_size_h1 }}rem;
        --font-size-h2: {{ settings.font_size_h2 }}rem;
        --font-size-h3: {{ settings.font_size_h3 }}rem;
        --font-size-h4: {{ settings.font_size_h4 }}rem;
        --font-size-h5: {{ settings.font_size_h5 }}rem;
        --font-size-h6: {{ settings.font_size_h6 }}rem;

        --font-size-body-tablet: {{ settings.font_size_body_tablet }}px;
        --font-size-h1-tablet: {{ settings.font_size_h1_tablet }}rem;
        --font-size-h2-tablet: {{ settings.font_size_h2_tablet }}rem;
        --font-size-h3-tablet: {{ settings.font_size_h3_tablet }}rem;
        --font-size-h4-tablet: {{ settings.font_size_h4_tablet }}rem;
        --font-size-h5-tablet: {{ settings.font_size_h5_tablet }}rem;
        --font-size-h6-tablet: {{ settings.font_size_h6_tablet }}rem;

        --font-size-body-mobile: {{ settings.font_size_body_mobile }}px;
        --font-size-h1-mobile: {{ settings.font_size_h1_mobile }}rem;
        --font-size-h2-mobile: {{ settings.font_size_h2_mobile }}rem;
        --font-size-h3-mobile: {{ settings.font_size_h3_mobile }}rem;
        --font-size-h4-mobile: {{ settings.font_size_h4_mobile }}rem;
