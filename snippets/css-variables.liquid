        --btn-secondary-text: {{ settings.btn_secondary_text }};

        --success: {{ settings.success }};
        --error: {{ settings.error }};
        --warning: {{ settings.warning }};
        --info: {{ settings.info }};

        --neutral-light: {{ settings.neutral_light }};
        --neutral-dark: {{ settings.neutral_dark }};

    }
</style>
